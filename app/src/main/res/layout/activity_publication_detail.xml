<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/pub_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_publication_item" />

    <android.support.v4.app.FragmentTabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/bottom_bar_thumb_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBottomBarItemClick"
            android:src="@drawable/ic_thumb_up_grey600_36dp" />

        <ImageButton
            android:id="@+id/bottom_bar_follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBottomBarItemClick"
            android:src="@drawable/ic_follow_grey600_36dp" />

        <ImageButton
            android:id="@+id/bottom_bar_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_comment_grey600_36dp" />

        <ImageButton
            android:id="@+id/bottom_bar_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBottomBarItemClick"
            android:src="@drawable/ic_share_grey600_36dp" />

        <ImageButton
            android:id="@+id/bottom_bar_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBottomBarItemClick"
            android:src="@drawable/ic_more_horiz_grey600_36dp" />
    </LinearLayout>
</LinearLayout>